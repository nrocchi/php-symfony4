{% extends 'base.html.twig' %}

{% block title %}{{ user.fullName }}{% endblock %}

{% block body %}

    <div class="main container">
        <div class="row mt-5">
            <div class="offset-lg-2 col-lg-8">
                <div class="row align-items-center">
                    <div class="col-4 text-right">
                        <img src="{{ user.picture }}" class="img-fluid avatar" alt="Avatar de {{ user.fullName }}">
                    </div>
                    <div class="col-8">
                        <h1>{{ user.fullName }}</h1>
                        <div class="badge badge-primary">{{ user.ads |length }} annonces</div>

                        {% if user is same as (app.user) %}
                            <div class="mt-3">
                                <a href="{{ path('account_profile') }}" class="btn btn-primary mr-3 mb-3 mb-md-0">Modifier mon profil</a>
                                <a href="{{ path('account_password') }}" class="btn btn-primary">Modifier mon mot de passe</a>
                            </div>
                        {% endif %}
                        
                    </div>
                    <div class="col-12 mt-5">
                        {{ user.description |raw }}
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                <h2>Les annonces de {{ user.fullName }}</h2>

                {% if user.ads | length > 0 %}
                    <div class="row">
                        {% for ad in user.ads %}
                            {% include 'ad/_ad.html.twig' %}
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-warning alert-dismissible mt-3">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <i class="fas fa-info-circle"></i>
                        <span><strong>{{ user.fullName }}</strong> n'a publi√© aucune annonce</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
