{% extends 'base.html.twig' %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}
    <div class="adtitle" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{ ad.coverImage }})">
        <div class="container">
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.introduction }}</p>
            <p class="h2">
                <strong>{{ ad.rooms }} chambres</strong> pour <strong>{{ ad.price }}&euro;</strong> par nuit
            </p>
            <a href="#" class="btn btn-secondary">RÃ©server</a>
        </div>
    </div>
    <div class="main container">
        <div class="row">
            <div class="col-8 mb-3">
                {{ ad.content|raw }}

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ad.images %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ad.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ image.url }}" class="d-block" alt="{{ image.caption }}">
                                <div class="carousel-caption d-none d-md-block w-100 p-2">
                                    <h5>{{ ad.title }}</h5>
                                    <p>{{ image.caption }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col-4">
                        <img src="http://placehold.it/64x64" alt="Avatar de Joseph">
                    </div>
                    <div class="col-8">
                        <h3>Joseph Dupont</h3>
                        <span class="badge badge-primary">3 annonces</span>
                    </div>
                    <p class="mt-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium, aliquid aperiam cupiditate ea
                        iusto molestias possimus ratione repellat sequi tempora.</p>
                    <p>Aliquam amet dolor dolorem enim eos et exercitationem, id, illum laborum non reiciendis suscipit
                        unde? Ad eius natus nihil quis?</p>
                    <p>Aperiam architecto at cupiditate, debitis, deleniti dolorem doloribus exercitationem ipsa ipsum
                        labore, molestias neque. Facere possimus quos recusandae repudiandae voluptates?</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}