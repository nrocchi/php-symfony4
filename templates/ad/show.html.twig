{% extends 'base.html.twig' %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}
    <div class="adtitle" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{ ad.coverImage }})">
        <div class="container">
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.introduction }}</p>
            <p class="h2">
                <strong>{{ ad.rooms }} chambres</strong> pour <strong>{{ ad.price }}&euro;</strong> par nuit
            </p>
            <a href="{{ url }}" class="btn btn-secondary mr-3 mb-0 mb-md-3 mb-xl-0">En savoir plus</a>
            {% if app.user and app.user == ad.author %}
                <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-secondary mr-3 mb-0 mb-md-3 mb-xl-0">Modifier l'annonce</a>
                <a href="{{ path('ads_delete', {'slug': ad.slug}) }}" class="btn btn-danger mt-3 mt-sm-0 mt-xl-3" onclick="return confirm(`Etes-vous sÃ»r de vouloir supprimer l'annonce : {{ ad.title }} ?`)">Supprimer l'annonce</a>
            {% endif %}
        </div>
    </div>
    <div class="main container">
        <div class="row">
            <div class="col-8 mb-3">
                {{ ad.content|raw }}

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ad.images %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ad.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ image.url }}" class="d-block" alt="{{ image.caption }}">
                                <div class="carousel-caption d-none d-md-block w-100 p-2">
                                    <h5>{{ ad.title }}</h5>
                                    <p>{{ image.caption }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-4">
                {% set a = ad.author %}
                <div class="row">
                    <div class="col-4">
                        <a href="{{ path('user_show', { 'slug': a.slug }) }}">
                            <img src="{{ a.picture }}" class="img-fluid avatar" alt="Avatar de {{ a.fullName }}">
                        </a>
                    </div>
                    <div class="col-8">
                        <a href="{{ path('user_show', { 'slug': a.slug }) }}">
                            <h3>{{ a.fullName }}</h3>
                        </a>
                        <span class="badge badge-primary">{{ a.ads | length }} annonces</span>
                    </div>
                    <div class="mt-3">
                        {{ a.description | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}