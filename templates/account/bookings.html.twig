{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}


{% block body %}

    <div class="main container">
        <h1>Mes réservations</h1>
        <div class="alert alert-info mt-3">
            Retrouvez ci-dessous toutes vos réservations
        </div>

        {% for booking in app.user.bookings %}
            {% set ad = booking.ad %}
            <div class="row mt-5">
                <div class="col-4">
                    <img src="{{ ad.coverImage }}" alt="Photo de {{ ad.title }}" class="img-fluid">

                    <div class="mt-3">
                        {% set comment = ad.commentFromAuthor(app.user) %}
                        {% if comment is not null %}
                            <strong>Note donnée : </strong>
                            {% include 'partials/rating.html.twig' with {'rating': comment.rating} %}
                        {% else %}
                            <p>Vous n'avez pas encore noté cette annonce.</p>
                            <a href="{{ path('booking_show', {'id': booking.id}) }}#comment">Donner votre avis</a>
                        {% endif %}
                    </div>
                </div>
                <div class="col-8">
                    <h4>{{ ad.title }}</h4>
                    <p>
                        Réservation <strong>n°{{ booking.id }}</strong><br>
                        Du {{ booking.startDate|date('d/m/Y') }} au {{ booking.endDate|date('d/m/Y') }} ({{ booking.amount }} &euro;)
                    </p>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}" class="btn btn-info">Plus d'informations</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}